<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_single_layout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/index"
        android:id="@+id/message_single_profile_image2" />


    <TextView
        android:id="@+id/message_single_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/message_single_profile_image2"
        android:layout_toStartOf="@+id/message_single_profile_image2"
        android:text="Message "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/message_single_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/message_single_text2"
        android:layout_alignBottom="@+id/message_single_text2"
        android:layout_centerHorizontal="true"
        android:text="00:00" />

    <ImageView
        android:id="@+id/message_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_single_profile_image2" />
</RelativeLayout>